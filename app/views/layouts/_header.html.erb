        <header id="header">
            <div id="logo">
                <div id="logo_text">
                    <!-- class="logo_colour", allows you to change the colour of the text -->
                    <h1>
                        <a href="/">My<span class="logo_colour">Pix</span></a>
                    </h1>
                    <h2>
                        Image Uploading and Sharing
                    </h2>
                </div>
            </div>
            <nav id="menubar">
                <ul id="menu">
                    <!-- put class="selected" in the li tag for the selected page - to highlight which page you're on -->
                    <li class=<%= yield(:title) == '' ? "selected" : "" %>>
                        <%= link_to 'Home', root_path %>
                    </li>
                    <li class=<%= yield(:title) == getName(@user) ? "selected" : "" %>>
                        <%= link_to 'My Page', mypage_path %>
                    </li>
                    <li class=<%= yield(:title) == 'Upload' ? "selected" : "" %>>
                        <%= link_to 'Upload', upload_path %>
                    </li>
                    <li class=<%= yield(:title) == 'All users' ? "selected" : "" %>>
                        <%= link_to "Users", users_path %>
                    </li>
                    <li class=<%= yield(:title) == 'Register' ? "selected" : "" %>>
                        <%= link_to 'Register', register_path %>
                    </li>
                </ul>
            </nav>
        </header>