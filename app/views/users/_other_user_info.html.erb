<% if friends? @user %>
<%= link_to "Remove Friends", current_user.friendships.find_by_friend_id(@user.id), :method => :delete %>
<%else%>
<%= link_to "Add Friend", friendships_path(:friend_id => @user.id), :method => :post %>
<%end%>

<h2><%= "#{@user.name}'s friends" %></h2>
<% @user.friends.each do |friend| %>
    <%= render friend %>
<% end %>